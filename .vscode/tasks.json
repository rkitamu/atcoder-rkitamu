{
  "version": "2.0.0",
  "tasks": [
    // workspace setup tasks
    {
      "label": "[setup] Update atcoder-cli templates",
      "type": "shell",
      "command": "cp",
      "args": [
        "-r",
        "${workspaceFolder}/settings/acc/*",
        "/home/vscode/.config/atcoder-cli-nodejs"
      ],
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "[setup] C# environment",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/setup_csharp.sh",
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "[setup] After container setup",
      "type": "shell",
      "command": "${workspaceFolder}/.devcontainer/after_setup.sh",
      "args": [
        "${workspaceFolder}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    // contest workflow tasks
    {
      "label": "[flow] New contest (interactive)",
      "type": "shell",
      "command": "acc",
      "args": [
        "new",
        "${input:contestId}",
        "--template",
        "${input:template}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "[flow] Add problem (interactive)",
      "type": "shell",
      "command": "acc",
      "args": [
        "add",
        "${input:contestId}",
        "--template",
        "${input:template}"
      ],
      "options": {
        "cwd": "${workspaceFolder}/problems/${input:contestId}"
      },
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    // Go tasks
    {
      "label": "[test] (Go) Run tests",
      "type": "shell",
      "command": "oj t -c 'go run ${file}' -d ${fileDirname}/tests/",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    // C# tasks
    {
      "label": "[build] (C#) Debug build",
      "type": "shell",
      "command": "dotnet build ${fileDirname} -c Debug",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "[build] (C#) Release build",
      "type": "shell",
      "command": "dotnet publish ${fileDirname} -c Release",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "[test] (C#) Run tests",
      "type": "shell",
      "command": "oj t -c '${fileDirname}/bin/Release/net9.0/publish/Program' -d ${fileDirname}/tests/",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "dependsOn": "[build] (C#) Release build",
      "dependsOrder": "sequence"
    }
  ],
  "inputs": [
    {
      "id": "contestId",
      "type": "promptString",
      "description": "Enter contest ID (e.g., abc401)",
      "default": "abc401"
    },
    {
      "id": "template",
      "type": "pickString",
      "description": "Select a template",
      "options": [
        "go",
        "csharp"
      ],
      "default": "go"
    }
  ]
}